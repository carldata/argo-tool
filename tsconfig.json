{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "@business-logic/*": ["./src/business-logic/*"],
      "@components/*": ["./src/components/*"],
      "@models/*": ["./src/models/*"],
      "@store/*": ["./src/store/*"],
      "@screens/*": ["./src/screens/*"]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}